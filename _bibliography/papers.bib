}

@article{peterson2025,
  title = {Glass-{{Bonded Monazite Waste Forms}} for {{Lanthanide}} and {{Actinide Immobilization}}: {{From Theoretical Design}} to {{Scale-Up Production}} and {{Characterization}}},
  shorttitle = {Glass-{{Bonded Monazite Waste Forms}} for {{Lanthanide}} and {{Actinide Immobilization}}},
  author = {Peterson, Miroslava and Riley, Brian J. and Lu, Xiaonan and Yano, Kayla H. and Mukhopadhyay, Semanti and Leavy, Ian I. and Nickerson, Ethan K. and Seffens, Robert J. and Du, Jincheng and Miller, Kyle D. and Saal, James E.},
  year = {2025},
